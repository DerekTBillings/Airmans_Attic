<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="355.0" prefWidth="730.0" styleClass="blackAndWhiteTheme" stylesheets="@../stylesheets/CommonStylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billings.controllers.CustomerInfoPageController">
	<children>
		<HBox alignment="CENTER" prefHeight="80.0" prefWidth="724.0">
			<children>
				<Label fx:id="newContactHeader" />
			</children>
		</HBox>
		<GridPane prefHeight="163.0" prefWidth="724.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label fx:id="firstNameLbl" GridPane.halignment="RIGHT">
					<GridPane.margin>
						<Insets right="15.0" />
					</GridPane.margin>
				</Label>
				<Label fx:id="lastNameLbl" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
					<GridPane.margin>
						<Insets right="15.0" />
					</GridPane.margin>
				</Label>
				<Label fx:id="rankLbl" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets right="15.0" />
					</GridPane.margin>
				</Label>
				<Label fx:id="cellPhoneLbl" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets right="15.0" />
					</GridPane.margin>
				</Label>
				<Label fx:id="dependentCheckLbl" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
					<GridPane.margin>
						<Insets right="15.0" />
					</GridPane.margin>
				</Label>
				<TextField fx:id="firstName" GridPane.columnIndex="1">
					<GridPane.margin>
						<Insets right="20.0" />
					</GridPane.margin>
				</TextField>
				<TextField fx:id="lastName" GridPane.columnIndex="3">
					<GridPane.margin>
						<Insets right="20.0" />
					</GridPane.margin>
				</TextField>
				<TextField fx:id="cellPhone" GridPane.columnIndex="3" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets right="20.0" />
					</GridPane.margin>
				</TextField>
				<CheckBox fx:id="dependentStatus" mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="2" />
				<ChoiceBox fx:id="rank" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</children>
			<opaqueInsets>
				<Insets right="10.0" top="10.0" />
			</opaqueInsets>
		</GridPane>
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
			<children>
            <Button fx:id="archiveCustomerBtn" mnemonicParsing="false">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
				<Button fx:id="editSponsorInfoBtn" mnemonicParsing="false">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="submitBtn" mnemonicParsing="false">
					<HBox.margin>
						<Insets left="10.0" right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="cancelBtn" mnemonicParsing="false">
					<HBox.margin>
						<Insets left="10.0" right="10.0" />
					</HBox.margin>
				</Button>
            <Button fx:id="toggleAdminBtn" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin></Button>
            <Button fx:id="addNoteBtn" mnemonicParsing="false">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
			</children>
		</HBox>
	</children>
</VBox>
