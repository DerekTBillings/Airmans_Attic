<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="rootContainer, blackAndWhiteTheme" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.billings.controllers.WelcomePageController"
	stylesheets="@../stylesheets/WelcomePageStylesheet.css, @../stylesheets/CommonStylesheet.css">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="headerLabel">
               <font>
                  <Font size="22.0" />
               </font>
               <HBox.margin>
               	  <Insets bottom="20" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="128.0" prefWidth="600.0">
         <children>
            <TextArea fx:id="announcementsTextArea" prefHeight="200.0" prefWidth="400.0" />
         </children>
      </HBox>
      <HBox styleClass="signInSignOutRow" alignment="CENTER" prefHeight="105.0" prefWidth="726.0">
         <children>
            <Button fx:id="customerSignInBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="checkOutBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="volunteerSignInBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets top="20.0" />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER" prefHeight="96.0" prefWidth="600.0">
         <children>
            <VBox styleClass="adminBtnGroup" alignment="CENTER" prefHeight="200.0">
               <children>
                  <Button fx:id="raffleBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="volunteerSignOutBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                  	<VBox.margin>
                  		<Insets bottom="10.0" />
                  	</VBox.margin>
                  </Button>
                  <Button fx:id="keyHolderBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                  	<VBox.margin>
                  		<Insets bottom="10.0" />
                  	</VBox.margin>
                  </Button>
                  <Button fx:id="adminPageBtn" mnemonicParsing="false" HBox.hgrow="ALWAYS"/>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
